#
# bspwm hotkeys
#

super + alt + Escape
	bspc quit

super + w
	bspc window -c

super + t
	bspc desktop -l next

super + b
	bspc desktop -B

super + {s,f}
	bspc window -t {floating,fullscreen}

# change to previous desktop and set wallpaper
super + {grave,Tab}
	bspc {window,desktop} -f last && /home/skyler/.config/deskwall

super + apostrophe
	bspc window -s last

super + {o,i}
	bspc control --record-history off; \
	bspc window {older,newer} -f; \
	bspc control --record-history on

super + y
	bspc window -w last.manual

super + m
	bspc window -s biggest

super + {_,shift + }{h,j,k,l}
	bspc window -{f,s} {left,down,up,right}

super + {_,shift + }c
	bspc window -f {next,prev}

# rotate windows
super + {comma,period}
	bspc desktop -C {backward,forward}

# change desktops and set wallpaper
super + bracket{left,right}
	bspc desktop -f {prev,next} &&\
	/home/skyler/.config/deskwall

# preselections
super + ctrl + {h,j,k,l}
	bspc window -p {left,down,up,right}

super + ctrl + {_,shift + }space
	bspc {window -p cancel,desktop -c}

# adjust window dimensions
super + alt + {h,j,k,l}
	bspc window -e {left -10,down +10,up -10,right +10}
# adjust window dimensions
super + alt + shift + {h,j,k,l}
	bspc window -e {right -10,up +10,down -10,left +10}

super + ctrl + {1-9}
	bspc window -r 0.{1-9}

super + {_,shift + }{1-9,0}
	bspc {desktop -f,window -d} ^{1-9,10} &&\
	/home/skyler/.config/deskwall	

~button1
	bspc pointer -g focus

super + button{1-3}
	bspc pointer -g {move,resize_side,resize_corner}

super + !button{1-3}
	bspc pointer -t %i %i

super + @button{1-3}
	bspc pointer -u

#
# wm independent hotkeys
#

super + Return
	urxvt

super + space
	dmenu_run

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd


#
# Custom hotkeys
#

alt + Tab
	bspc window -f next

alt + shift + Tab
	bspc window -f prev

#edit sxhkd config
super + shift + Escape
	urxvt -e nano ~/.config/sxhkd/sxhkdrc

#focus windows
super + {Up,Down,Left,Right}
	bspc window -f {up,down,left,right}

#preselect windows
super + alt + {Up,Down,Left,Right}
	bspc window -p {up,down,left,right} 
